<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear_Layout_Main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="33.34">

        <TextView
            android:id="@+id/textView_ProductName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/ProductList_Name"
            android:textSize="17sp"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/textView_ProductPrice"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/ProductList_Price"
            android:textSize="17sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_ProductQuantity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="66.66"
        android:text="@string/Quantity_TextView"
        android:textSize="17sp"
        android:paddingStart="30dp"
        android:textAlignment="viewStart"
        tools:ignore="RtlSymmetry" />

</LinearLayout>